<div class="articleIndex__mainSpace">
  <div class="articleIndex__sideBar">
  </div>
  <div class="articleIndex__allArticlesContainer">
    <% articles.each do |article| %>
      <div class="articleIndex__articleContainer">
        <div class="articleIndex__themeContainer">
          研究テーマ：<%= link_to article.theme, article_path(article) %>
        </div>
        <div class="articleIndex__issueContainer">
          <span class="articleHeader">課題：</span><%= article.issue %>
        </div>
        <div class="articleIndex__measureContainer">
          <span class="articleHeader">手段：</span><%= article.measure %>
        </div>
        <div class="articleIndex__resultContainer">
          <span class="articleHeader">結果：</span><%= article.result %>
        </div>
        <div class="articleIndex__tagContainer">
          # <%= article.tags.first&.tag_name%>
        </div>
        <div class="articleIndex__postingTime">
          <%= l article.updated_at %>
        </div>
        <div class="articleIndex__username">
          <%= article.user.name %>
        </div>
      </div>
    <% end %>
  </div>
</div>