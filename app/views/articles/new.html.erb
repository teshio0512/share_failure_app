<%= render partial: 'header' %>
<%= form_with model: @article_form, url: articles_path, local: true do |f| %>
  <%= render 'error_messages', model: @article_form %>
  <%= f.text_field :theme, placeholder: "研究テーマ" %>
  <%= f.text_area :issue, placeholder: "課題" %>
  <%= f.text_area :measure, placeholder: "手段" %>
  <%= f.text_area :result, placeholder: "結果" %>
  <%= f.text_field :tag_name, placeholder: "タグ" %>
  <%= f.file_field :image %>
  <%= f.submit "投稿" %>
<% end %>